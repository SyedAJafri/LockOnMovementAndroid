<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/xSpeedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:text="X Speed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/lockSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="@string/lock" />

    <TextView
        android:id="@+id/xSpeedValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/xSpeedTV"
        android:layout_alignTop="@+id/xSpeedTV"
        android:layout_marginTop="27dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#54151B" />

    <TextView
        android:id="@+id/ySpeedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zSpeedValueTV"
        android:layout_below="@+id/xSpeedValueTV"
        android:layout_marginTop="18dp"
        android:text="Y Speed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/zSpeedValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#151B54" />

    <TextView
        android:id="@+id/ySpeedValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zSpeedTV"
        android:layout_alignLeft="@+id/ySpeedTV"
        android:layout_marginBottom="30dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#151B54" />

    <TextView
        android:id="@+id/zSpeedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zSpeedValueTV"
        android:layout_alignRight="@+id/ySpeedTV"
        android:layout_marginBottom="18dp"
        android:text="Z Speed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
